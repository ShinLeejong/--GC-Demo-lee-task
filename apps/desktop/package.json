{
  "name": "desktop",
  "version": "0.1.0",
  "private": true,
  "main": "src/main.js",
  "scripts": {
    "dev": "concurrently -k -n WEB,ELEC -c blue,green \"pnpm -w --filter web dev\" \"pnpm --filter desktop start:dev\"",
    "start:dev": "wait-on http-get://localhost:3000 && electron .",
    "pack": "pnpm -w --filter web build && pnpm -w --filter web export && electron-builder --dir",
    "dist": "pnpm -w --filter web build && pnpm -w --filter web export && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^8",
    "electron": "^31",
    "electron-builder": "^24",
    "serve-handler": "^6",
    "wait-on": "^7"
  },
  "build": {
    "appId": "com.sjh.gc.demo",
    "productName": "GC Demo (Electron)",
    "files": [
      "src/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../web/out",
        "to": "web-out"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
